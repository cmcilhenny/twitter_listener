<div class= "container" ng-controller="SearchCtrl">
	<div class="row">
		<div class="col-xs-3">
				
			<div class="row">
				<h3 class="text-left">My Searches</h3>
				<ul class="nav nav-pills nav-stacked" ng-repeat="search in data.searches">
					<!-- adding ng-class and ng-click to display results of one search when search term is selected -->
				<li ng-class="{active: $index==selectedSearch}"><a ng-click="selectSearch($index)" href="#">{{search.title}}</a></li>
				</ul>
			</div>
		</div>			

		<div class='col-xs-8'>
			<ul ng-repeat="result in data.searches[selectedSearch].results"><li>{{result}}</li></ul>
		</div>
	</div>
</div>
